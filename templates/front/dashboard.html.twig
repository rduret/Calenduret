{% extends 'base.html.twig' %}

{% block title %}Mes calendriers{% endblock %}

{% block body %}
<section class="my-5 py-md-3 list-calendars">
    <div class="container">
        <div class="row">
            <h1 class="mb-5">Mes calendriers</h1>
        </div>
        <div class="row">
            {% for modelCalendar in modelCalendars %}
                <div class="col-md-3 col-6 mb-4">
                    <div class="card card-calendar h-100">
                        <img alt="Calendrier {{ modelCalendar.title }}" src="{{ asset(modelCalendar.path) }}"/>
                        <div class="card-img-overlay d-flex justify-content-center align-items-end">
                            <div class="card-title fw-bold text-center">
                                <a class="stretched-link" href="#">{{ modelCalendar.title }}</a>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
        <div class="navigation">
            {{ knp_pagination_render(modelCalendars) }}
        </div>
    </div>
</section>
{% endblock %}
