            <div class="col-md-4 text-center">
                <a class="logo" href="{{ path('home') }}">Calendrier</a>
            </div>
            <div class="col-md-4 d-flex flex-column text-center justify-content-between">
                <a href="{{ path('page_cgu') }}">Conditions générales</a>
