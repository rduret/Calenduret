{% extends 'base.html.twig' %}

{% block title %}Calenduret - Réinialisation de mot de passe{% endblock %}

{% block body %}
    <section>
        <div class="container my-5">
            <div class="card py-1 py-md-5">
                <div class="row justify-content-center">
                    <div class="col-md-8">
                        <div class="card-body">
                            {% for flash_error in app.flashes('reset_password_error') %}
                                <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                            {% endfor %}

                            {{ form_start(requestForm) }}
                            <h1 class="text-center">Demande de réinitalisation</h1>
                            <div class="row mt-3">
                                <div class="col-12">
                                    {{ form_widget(requestForm.email, { 'attr': {'class': 'form-control'} }) }}
                                    <small>
                                        Entrez votre mot de passe et nous vous enverrons un lien pour réinitaliser votre mot de passe.                                    
                                    </small>
                                    <div class="text-danger">
                                        {{ form_errors(requestForm.email) }}
                                    </div>
                                </div>
                            </div>

                            <div class="text-center mt-3">
                                <button class="btn btn-primary">Envoyer la demande de réinitalisation</button>
                            </div>
                            {{ form_end(requestForm) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
